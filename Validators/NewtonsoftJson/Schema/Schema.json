{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "anyOf": [
    {
      "$ref": "#/definitions/CreateUserRequest"
    },
    {
      "$ref": "#/definitions/CreateProductRequest"
    }
  ],

  "definitions": {
    "CreateUserRequest": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string",
          "minLength": 5
        },
        "displayName": {
          "type": "string",
          "minLength": 5
        }
      },
      "required": [ "userName", "displayName" ]
    },
    "CreateProductRequest": {
      "type": "object",
      "properties": {
        "productId": {
          "type": "string",
          "minLength": 5
        },
        "productName": {
          "type": "string",
          "minLength": 5
        },
        "price": {
          "type": "number",
          "minimum": 1
        }
      },
      "required": [ "productId", "productName" ]
    }
  }

}
